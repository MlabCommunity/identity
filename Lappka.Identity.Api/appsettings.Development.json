{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
  "Postgres": {
    "ConnectionString": "Password=admin;Host=localhost;Port=5432;Database=Lappka.IdentityDB;Username=postgres"
  },

  "jwt": {
    "issuer": "http://localhost:5001",
    "expiryMinutes": 5,
    "expiryDays": 100,
    "useRsa": true,
    "hmacSecretKey": "GRQKzLUn9w59LpXEbsESa8gtJnN3hyspq7EV4J6Fz3FjBk994r",
    "rsaPrivateKeyPath": "rsa-private-key.pem",
    "rsaPublicKeyPath": "rsa-public-key.pem"
  },
  
  "Grpc": {
    "NotificationAddress": "http://localhost:5011"
  },

  "rabbitMq": {
    "connectionName": "rabbitmq",
    "retries": 3,
    "retryInterval": 2,
    "conventionsCasing": "snakeCase",
    "logger": {
      "enabled": true
    },
    "username": "myuser",
    "password": "mypassword",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestedConnectionTimeout": "00:00:30",
    "requestedHeartbeat": "00:01:00",
    "socketReadTimeout": "00:00:30",
    "socketWriteTimeout": "00:00:30",
    "continuationTimeout": "00:00:20",
    "handshakeContinuationTimeout": "00:00:10",
    "networkRecoveryInterval": "00:00:05",
    "exchange": {
      "declare": true,
      "durable": true,
      "autoDelete": false,
      "type": "topic",
      "name": "stories"
    },
    "queue": {
      "declare": true,
      "durable": true,
      "exclusive": false,
      "autoDelete": false,
      "template": "some-service/."
    },
    "context": {
      "enabled": true,
      "header": "message_context"
    },
    "deadLetter": {
      "enabled": true,
      "prefix": "dlx-",
      "declare": true
    },
    "maxProducerChannels": 1000,
    "requeueFailedMessages": false,
    "spanContextHeader": "span_context"
  }
}
